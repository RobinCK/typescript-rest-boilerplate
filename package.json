{
  "name": "rest-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "npm run clean && tsc -p tsconfig.json",
    "dev": "npm-run-all -s build -p watch:*",
    "clean": "trash dist",
    "lint:fix": "prettier \"src/**/*.ts\" --write && tslint --fix --project .",
    "lint": "tslint --project . && prettier src/**/*.ts --list-different",
    "watch:node": "nodemon ./dist/index.js",
    "watch:ts": "tsc -p tsconfig.json --watch",
    "docker:cleanup": "docker-compose rm -f",
    "docker:run": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "swagger": "muskrat -e ./src/index.ts -o ./dist/swagger.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Igor Ognichenko",
  "license": "MIT",
  "dependencies": {
    "@muskrat/swagger-routing-controllers": "^1.0.1",
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "config": "^2.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "multer": "^1.3.1",
    "muskrat": "^0.0.12",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/multer": "^1.3.7",
    "husky": "^1.0.0-rc.14",
    "jsonlint": "^1.6.3",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "trash-cli": "^3.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "typescript": "^3.0.3",
    "yaml-lint": "^1.2.4"
  }
}
